{%- comment -%}
  use 'cart.cart_level_discount_applications' if you want to display discounts that affect only the cart
  use 'cart.discount_applications' if you want to display discounts that affect individual line items and cart
{%- endcomment -%}

{%- if cart.discount_applications.size > 0 -%}
  <ul class="flex flex-col gap-y-1" role="list" aria-label="{{ 'customer.order.discount' | t }}">
    {%- for discount in cart.discount_applications -%}
      <li class="flex flex-row justify-between items-center gap-4">
        <div class="flex gap-2 items-center body-4">
          {%- render 'icon-discount' -%}
          <span>{{ discount.title }}</span>
        </div>
        <span class="body-3 text-nowrap">(-{{ discount.total_allocated_amount | money }})</span>
      </li>
    {%- endfor -%}
  </ul>
{%- endif -%}
