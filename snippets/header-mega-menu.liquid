<div
  class="absolute w-full top-[100%] left-0 right-0 cursor-default shadow-lg z-[2] border-t border-t-gray-200 border-opacity-20 color-{{ section.settings.color_scheme }} gradient"
  style="display: none;"
  x-show="isMenuOpen"
  x-trap="isMenuOpen"
>
  <div class="c-container py-10">
    <div class="grid grid-cols-5 gap-8">
      <div class="col-span-2 flex flex-col gap-y-4">
        {%- if block.settings.image != blank -%}
          <a
            href="{{ block.settings.cta_link }}"
            class="block rounded-[15px] overflow-hidden"
          >
            {%- render 'image-element', image: block.settings.image, class: 'w-full h-auto', max_width: 800 -%}
          </a>
        {%- endif -%}

        {%- if block.settings.description != blank -%}
          <div class="richtext body-3">
            {{- block.settings.description -}}
          </div>
        {%- endif -%}
      </div>

      <div class="col-span-3">
        {%- assign linklist = block.settings.menu -%}
        {%- if linklist != blank -%}
          <div class="flex flex-row justify-between gap-x-2 xl:gap-x-4 gap-y-8" data-type="menu">
            {%- for link in linklist.links limit: 4 -%}
              <nav
                class="flex flex-col gap-y-5"
                role="navigation"
                aria-label="{{ block.settings.title }} {{ link.title }}"
              >
                <h4 class="h5">
                  {{- link.title -}}
                </h4>

                {%- if link.links.size > 0 -%}
                  <ul class="flex flex-col gap-y-3">
                    {%- for childlink in link.links -%}
                      <li>
                        <a
                          href="{{ childlink.url }}"
                          class="flex body-3 hover:underline"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{- childlink.title -}}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </nav>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
